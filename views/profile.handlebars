<audio id="music" loop="loop">
    <source src="/img/music.mp3" type="audio/mp3">
</audio>
<div class="profile-container">
    <div class="header">
        <div class="header-left">
            <ul class="menu-horizontal">
                <li>
                    <a><img src="img/POKEBALL.png" alt="menu" class="menu"></a>
                    <ul id="menu-vertical" class="menu-vertical">
                        <li><a href="/hub">INICIO</a></li>
                        <li><a href="/ranking">RANKING</a></li>
                        <li><a href="/teams">EQUIPO</a></li>
                        <li><a href="/play">JUGAR</a></li>
                        <li><a href="/profile">PERFIL</a></li>
                        <li style="background-color: rgb(143, 139, 139); border-bottom-left-radius:10px; border-bottom-right-radius:10px;"><a href="/logout">LOG-OUT</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="header-mid">
            <a href="/hub">POKEMON COLISEUM</a>
        </div>
        <div id="header-right"class="header-right">
            <ul class="menu-horizontal">
                <li>
                    <img id="header-music-logo" src="/img/muted.png" style="margin-bottom: 20px; margin-left: 100px; margin-top: 35px; height: 36px; width: 42px; cursor: url(data:image/png;base64,) 14 0,pointer;" onclick="musicOnOff()" alt="muted">
                    <ul id="menu-vertical" class="menu-vertical">
                        <li><a><input type="range" min="0" max="1" value="0.2" step="0.001" id="volume-meter"></a></li>
                    </ul>
                </li>
            </ul>
            
        </div>
    </div>
    <div class="profile-container-mini">
        <div class="profile-arrow-left">
            <img id="profile-left-arrow" src="/img/flecha-izq.png" onclick="changeScreen()">
        </div>
        <div id="profile-container" class="nes-container is-rounded">
            <div id="profile-info-title" class="profile-title">
                <div id="profile-title-mini" class="profile-title-mini"><p>FICHA ENTRENADOR</p> 
                </div>
                <p id="profile-id-number">Nº000{{{idUser}}}</p>
            </div>
            <div id="profile-info" class="profile-info">
                <div class="profile-inputs">
                    <div class="profile-inputs-mini">
                        <p>NOMBRE</p>
                        <input type="text" onkeyup="changeInputs()" id="profile-name" class="nes-input" value={{name}}>
                    </div>
                    <div class="profile-inputs-mini">
                        <p>APELLIDO</p>
                        <input type="text" onkeyup="changeInputs()" id="profile-surname" class="nes-input" value={{surname}}>
                    </div>
                    <div class="profile-inputs-mini">
                        <p>USUARIO</p>
                        <input type="text" onkeyup="changeInputs()" id="profile-user" class="nes-input" value={{user}}>
                    </div>
                </div>
                <div class="profile-avatar">
                    <div class="profile-avatar-container">
                        <img id="avatar" src="/img/{{sprite}}" alt="avatar">
                    </div>
                </div>
            </div>
            <div id="profile-stats-title" class="profile-title" style="display:none">
                <div class="profile-title-mini"><p>ESTADISTICAS</p> 
                {{!-- <img src="/img/x.png"><img src="/img/tick.png"> --}}
                </div>
                <p>Nº000{{idUser}}</p>
            </div>
            <div id="profile-stats" class="profile-stats" >
                <div class="profile-games-mode">
                    <div class="profile-games-mode-container">
                        <div class="profile-games-mode-title">
                            <p>RANDOM</p>
                        </div>
                        <div class="profile-games-mode-info">
                            <div class="profile-games-mode-info-mini">
                                <p>VICTORIAS</p> <p>{{wins}}</p>
                            </div>
                            <div class="profile-games-mode-info-mini">
                                <p>DERROTAS</p> <p>{{defeats}}</p>
                            </div>
                            <div class="profile-games-mode-info-mini">
                                <p>GAMES</p> <p>{{games}}</p>                                   
                            </div>
                            <div class="profile-games-mode-info-mini">
                                <p>ELO</p> <p>{{elo}}</p>                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="profile-games-mode">
                    <div class="profile-games-mode-container">
                        <div class="profile-games-mode-title">
                            <p>EQUIPOS</p>
                        </div>
                        <div class="profile-games-mode-info">
                            <div class="profile-games-mode-info-mini">
                                <p>VICTORIAS</p> <p>{{winsR}}</p>
                            </div>
                            <div class="profile-games-mode-info-mini">
                                <p>DERROTAS</p> <p>{{defeatsR}}</p>
                            </div>
                            <div class="profile-games-mode-info-mini">
                                <p>GAMES</p> <p>{{gamesR}}</p>                                   
                            </div>
                            <div class="profile-games-mode-info-mini">
                                <p>ELO</p> <p>{{eloR}}</p>                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="profile-arrow-right">
            <img id="profile-right-arrow" src="/img/flecha-der.png" onclick="changeScreen()">
        </div>
    </div>
</div>

<script src="/js/profile.js"></script>